pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                
                checkout scm
            }
        }

        stage('Set up Python environment') {
            steps {
                script {
                   
                    sh 'sudo apt update'
                    sh 'sudo apt install -y python3-venv'
                    sh 'python3 -m ensurepip --upgrade'

                    // Create virtual environment
                    sh 'python3 -m venv venv'
                }
            }
        }

        stage('Activate virtual environment and install requirements') {
            steps {
                script {
                   
                    sh '. venv/bin/activate'

                    // Install project dependencies using requirements.txt
                    sh 'pip install -r requirements.txt'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                   
                    sh 'python3 test.py'
                }
            }
        }
    }

    post {
        success {
            echo 'Website loaded successfully (HTTP 200)\nTest passed.'
        }
        failure {
            echo 'Build or tests failed. Take appropriate actions.'
        }
    }
}
